<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:id="@+id/ll_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_type_title_f"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_type_title_f"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:text="女士"
                android:textColor="#000"
                android:textSize="12dp" />
            <View
                android:id="@+id/v_type_title_f"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type_title_m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_type_title_m"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:text="男士"
                android:textColor="#888888"
                android:textSize="12dp" />
            <View
                android:id="@+id/v_type_title_m"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#888888"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_type_title_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_type_title_c"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#fff"
                android:text="儿童"
                android:textColor="#888888"
                android:textSize="12dp" />
            <View
                android:id="@+id/v_type_title_c"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#888888"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_type_sale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_type_title"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/iv_type_sale"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/more"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_type_sale"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Sale"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:gravity="center_vertical"
            android:textColor="#ff0000"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_below_sale"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9dbebebe"
        android:layout_below="@id/rl_type_sale"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:id="@+id/ll_type_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/v_below_sale"
        android:layout_marginTop="5dp">

        <ListView
            android:id="@+id/lv_type_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"/>
    </LinearLayout>


</RelativeLayout>
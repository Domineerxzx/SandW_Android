<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_unlogin"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#cfcfcf"
                android:orientation="vertical"
                android:padding="20dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_unlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="您可以从任何电子设备查看您的购物袋与愿望单"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <Button
                        android:id="@+id/bt_create"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_background_create"
                        android:text="创建账户"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_background_login"
                        android:text="登录"
                        android:textColor="#fff"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_login"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Domineer"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="/374448535@qq.com"
                        android:textColor="#888"
                        android:textSize="12dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_order"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/ll_info"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="我的订单与退货"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_order"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/tv_order"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_order"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#9dbebebe" />

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_order"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="个人信息与密码"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_user_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/tv_user"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_user"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#9dbebebe" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_below="@id/tv_user"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="地址簿"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/iv_address_more"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@id/tv_address"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/more" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/tv_address"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#9dbebebe" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:text="我的所在地"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rl_country"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <ImageView
                        android:id="@+id/iv_country"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/country_cn" />

                    <TextView
                        android:id="@+id/tv_country"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@id/iv_country"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_country"
                        android:gravity="center_vertical"
                        android:text="中国内地(CNY)"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/iv_country_more"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/more" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="10dp"
                        android:background="#9dbebebe" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:text="语言与交易货币将依照您选择的国家/地区设定"
                    android:textColor="#000"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_select_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_location"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:text="选购男士/女士"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rl_select_sex"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:id="@+id/rbt_sex_f"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@id/tv_sex_f"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/tv_sex_f"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@id/rbt_sex_f"
                        android:text="女士"
                        android:textSize="12dp" />


                    <View
                        android:id="@+id/v_sex_f"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_sex_f"
                        android:layout_marginTop="2dp"
                        android:background="#9dbebebe" />
                    <RadioButton
                        android:id="@+id/rbt_sex_m"
                        android:layout_width="30dp"
                        android:layout_height="20dp"
                        android:layout_alignBottom="@id/tv_sex_m"
                        android:layout_alignParentRight="true"/>

                    <TextView
                        android:id="@+id/tv_sex_m"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_below="@id/v_sex_f"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/rbt_sex_m"
                        android:layout_marginTop="5dp"
                        android:text="男士"
                        android:textSize="12dp" />


                    <View
                        android:id="@+id/v_sex_m"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/tv_sex_m"
                        android:layout_marginTop="2dp"
                        android:background="#9dbebebe" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginTop="5dp"
                    android:text="您可以利用此功能享受App个人化购物体验,我们将优先展示最适合您的单品。"
                    android:textColor="#000"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_select_sex"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:text="寻求协助"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/rl_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_about_us"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:text="关于我们"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/iv_about_us_more"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@id/tv_about_us"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/more" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#9dbebebe" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_clause"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_clause"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:text="条款与条件"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/iv_clause_more"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@id/tv_clause"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/more" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#9dbebebe" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:text="隐私政策"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/iv_privacy_more"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@id/tv_privacy"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/more" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#9dbebebe" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_guide"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:text="常见问题及指南"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/iv_guide_more"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@id/tv_guide"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/more" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#9dbebebe" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_partner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <TextView
                        android:id="@+id/tv_partner"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:text="合作伙伴"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/iv_partner_more"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignBottom="@id/tv_partner"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/more" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#9dbebebe" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_help"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="联系我们"
                    android:textColor="#000"
                    android:textSize="12dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:layout_marginTop="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#9dbebebe" />

                    <View
                        android:id="@+id/v_contact_us_m"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@id/ll_contact_phone"
                        android:layout_centerInParent="true"
                        android:background="#9dbebebe" />

                    <LinearLayout
                        android:id="@+id/ll_contact_phone"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_toLeftOf="@id/v_contact_us_m"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contact_phone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/contact_phone" />

                        <TextView
                            android:id="@+id/tv_contact_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="电话"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_contact_email"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_toRightOf="@id/v_contact_us_m"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_contact_email"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/contact_email" />

                        <TextView
                            android:id="@+id/tv_contact_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp"
                            android:text="电子邮件"
                            android:textColor="#000"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/ll_contact_phone"
                        android:background="#9dbebebe" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_contact_time"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="服务时间：周一至周五 北京时间 09:00 - 18:00"
                    android:textColor="#000"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_cancellation"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/ll_contact_us"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_cancellation"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="不是Domineer吗？"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000"/>

                <Button
                    android:id="@+id/bt_cancellation"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape_background_login"
                    android:layout_gravity="center"
                    android:text="注销账户"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

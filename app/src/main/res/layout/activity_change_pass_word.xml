<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_close_change_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_change_password"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/tv_title"
            android:layout_toLeftOf="@id/iv_shopbag"
            android:background="@mipmap/find" />

        <ImageView
            android:id="@+id/iv_shopbag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/tv_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/shopbag" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#9dbebebe" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title">


        <TextView
            android:id="@+id/tv_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="旧密码："
            android:layout_marginLeft="20dp"
            android:textColor="#454040"
            android:textSize="10dp"/>
        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_old_password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="   请输入旧密码"
            android:textSize="12dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="新密码："
            android:layout_below="@id/et_old_password"
            android:layout_marginLeft="20dp"
            android:textColor="#454040"
            android:textSize="10dp"/>
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_new_password"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="   请输入新密码"
            android:textSize="12dp"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tv_new_password_r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="确认新密码："
            android:layout_below="@id/et_new_password"
            android:layout_marginLeft="20dp"
            android:textColor="#454040"
            android:textSize="10dp"/>
        <EditText
            android:id="@+id/et_new_password_r"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/tv_new_password_r"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_background_input"
            android:hint="   请确认新密码"
            android:gravity="center_vertical"
            android:textSize="12dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/bt_change_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:text="修改密码"
        android:background="@drawable/shape_background_login"
        android:layout_margin="2dp"
        android:textColor="#FFF"
        android:textSize="12dp"/>
</RelativeLayout>


